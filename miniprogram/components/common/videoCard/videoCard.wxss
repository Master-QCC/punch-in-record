.video-card-container .video-box {
  width: 100%;
  background-color: white;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 10px 12px 2px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.video-card-container .video-box .video {
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
}

.video-card-container .video-box .transition-effect {
  transition: all .5s ease-in-out;
}

.video-card-container .video-box .video-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  font-weight: bold;
  font-size: large;
  color: black;
}

.video-card-container .video-box .video-title .icon {
  width: 42rpx;
  height: 42rpx;
}

.video-card-container .video-box .detial-box {
  display: flex;
  justify-content: space-between;
  padding: 0 16rpx;
  color: #d1d1d1;
}

.video-card-container .video-box .vlog-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
}

.video-card-container .video-box .vlog-toolbar .tool-box {
  padding-top: 16rpx;
  display: flex;
  align-items: center;
}

.video-card-container .video-box .vlog-toolbar .tool-box .thumbsUp-number {
  margin-left: 8rpx;
}

.video-card-container .video-box .vlog-toolbar .tool-box .like-icon {
  width: 0;
  height: 0;
  transform: rotate(-45deg);
  transform-origin: left bottom;
}

.video-card-container .video-box .vlog-toolbar .tool-box .like-icon.like {
  width: 50rpx;
  height: 50rpx;
  transform: rotate(0deg);
}

.video-card-container .video-box .vlog-toolbar .tool-box .like-icon.agree {
  width: 50rpx;
  height: 50rpx;
  transition-delay: .5s;
  transform: rotate(0deg);
}

.video-card-container .video-box .vlog-toolbar .tool-box .like-icon.more {
  width: 50rpx;
  height: 50rpx;
  margin-left: 16rpx;
  transform-origin: center;
  transform: rotate(0deg);
}

.video-card-container .video-box .vlog-toolbar .danmu-box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.video-card-container .video-box .vlog-toolbar .danmu-box .danmu-input {
  padding-left: 16rpx;
  border-radius: 30rpx 0 0 30rpx;
  border: 1px dashed #d1d1d1;
  border-right: none;
  font-size: 1rem;
  height: 80rpx;
  width: 50%;
  transition: all .5s ease-in-out;
}

.video-card-container .video-box .vlog-toolbar .danmu-box .danmu-input.focus {
  width: 80%;
}

.video-card-container .video-box .vlog-toolbar .danmu-box .danmu-btn {
  flex: none;
  line-height: 80rpx;
  height: 80rpx;
  padding: 0 16rpx;
  border-radius: 0 20rpx 20rpx 0;
  color: white;
  font-weight: bold;
  background-color: #ffbe46;
}
