.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 32rpx;
	width: 100%;
	min-height: 100vh;
  background: linear-gradient(-45deg,#f9d7b4, #fed9e6, #ddfcf5, #d9e4fe);
  background-size: 300% 300%;
	animation: gradientBG 15s ease infinite;
}

@keyframes gradientBG {
	0% {
		background-position: 0% 50%;
	}
	50% {
		background-position: 100% 100%;
	}
	100% {
		background-position: 0% 50%;
	}
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

input, textarea {
  width: 100%;
  text-indent: 10rpx;
  font-size: 36rpx;
  line-height: 1.2;
  padding: 10rpx;
  min-height: 80rpx;
  max-height: 100rpx;
  box-sizing: border-box;
}

.tremble {
  animation: shake-rotate-first 1.5s infinite;
}

.orange-color {
  color: #ffbe46;
}

.hide {
  display: none;
}

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

@keyframes shake-rotate-first {
  5%, 25%, 45%, 65%, 90% {
    transform: rotate(.5deg);
  }
  10%, 30%, 50%, 70%, 95% {
    transform: rotate(1deg);
  }
  15%, 35%, 55%, 75% {
    transform: rotate(-.5deg);
  }
  20%, 40%, 60%, 80% {
    transform: rotate(-1deg);
  }
  0%, 100% {
    transform: rotate(0deg);
  }
}

@keyframes shake-rotate-second {
  5%, 25%, 45%, 65%, 90% {
    transform: rotate(-1deg);
  }
  10%, 30%, 50%, 70%, 95% {
    transform: rotate(.5deg);
  }
  15%, 35%, 55%, 75% {
    transform: rotate(-1deg);
  }
  20%, 40%, 60%, 80% {
    transform: rotate(1deg);
  }
  0%, 100% {
    transform: rotate(0deg);
  }
}

@keyframes shake-rotate-third {
  5%, 25%, 45%, 65%, 90% {
    transform: rotate(1deg);
  }
  10%, 30%, 50%, 70%, 95% {
    transform: rotate(-.5deg);
  }
  15%, 35%, 55%, 75% {
    transform: rotate(.5deg);
  }
  20%, 40%, 60%, 80% {
    transform: rotate(-1deg);
  }
  0%, 100% {
    transform: rotate(0deg);
  }
}