.login-page-container {
  padding: 0;
}
.login-page-container .userinfo {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  animation-fill-mode: forwards;
  box-shadow: 0 10px 12px 2px rgba(0, 0, 0, 0.1);
}

.login-page-container .userinfo.hasUserInfo {
  animation: openIndex 3s;
  top: -100%;
}

.login-page-container .login-button {
  position: absolute;
  background: white;
  box-shadow: 0 10px 12px 2px rgba(0, 0, 0, 0.15);
  border-radius: 40rpx;
  color: #ffbe46;
}

.login-page-container .signature {
  position: absolute;
  bottom: 120rpx;
  left: 0;
  font-size: 1.2rem;
  width: 100%;
  text-align: center;
  color: #f5f1e7;
}

.login-page-container .agreement-btn {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  width: 100%;
  text-align: center;
  background: linear-gradient(140deg, #222222 30%, #f7aa06 100%);
  background-position: 50% 75%;
  background-size: 100% 200%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.login-page-container .loginbg {
  height: 100vh;
}
@keyframes openIndex {
  0% {
    top: 0;
  }
  100% {
    top: -100%;
  }
}
