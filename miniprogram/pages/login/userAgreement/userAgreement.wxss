.agreement-page-container {
  padding: 32rpx;
}

.agreement-page-container .list-item {
  width: 100%;
  background-color: white;
  padding: 32rpx;
  border-radius: 20rpx;
  margin: 16rpx 0;
  box-sizing: border-box;
  box-shadow: 0 5px 12px 2px rgba(0, 0, 0, 0.1);
}

.agreement-page-container .list-item:first-child {
  margin-top: 0;
}

.agreement-page-container .list-item:last-child {
  margin-bottom: 0;
}

.agreement-page-container .title {
  font-size: 2rem;
  background: linear-gradient(140deg, #222222 30%, #f7aa06 100%);
  background-position: 50% 75%;
  background-size: 100% 200%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: bold;
  margin-bottom: 48rpx;
}

.agreement-page-container .title.top-space {
  margin-top: 48rpx;
}

.agreement-page-container .sub-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
  color: black;
}

.agreement-page-container .sub-title .icon {
  width: 48rpx;
  height: 48rpx;
  transform-origin: center;
  transition: all .5s ease-in-out;
  transform: rotate(0deg);
}

.agreement-page-container .sub-title .icon.open {
  transform: rotate(-180deg);
}

.agreement-page-container .content {
  width: 100%;
  color: black;
  transition: all .5s ease-in-out;
  max-height: 0;
  opacity: 0;
  box-sizing: border-box;
  overflow: hidden;
}

.agreement-page-container .content.open {
  max-height: 400px;
  opacity: 1;
}
