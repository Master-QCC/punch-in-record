  animation: openAddBox 1s ease forwards;
}

.history-page-container .add-item-box.open .upload-box {
  display: block;
}

.history-page-container .add-item-box.open .wrapper-add-icon {
  display: none;
}

.history-page-container .add-item-box.close {
  animation: closeAddBox 1s ease forwards;
}

@keyframes openAddBox {
  from {
    width: 150rpx;
    height: 80rpx;
    color: #9b6507;
  }
  to {
    width: 80%;
    height: 720rpx;
  }
}

@keyframes closeAddBox {
  from {
    width: 80%;
    height: 720rpx;
  }
  to {
    width: 150rpx;
    height: 80rpx;
  }
}

@keyframes showItem {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0px);
    opacity: 1;
  }
}

@keyframes captionMove {
  from {
    opacity: 1;
    transform: translateX(100%);
  }
  to {
    opacity: 1;
    transform: translateX(-100%);
  }
}
