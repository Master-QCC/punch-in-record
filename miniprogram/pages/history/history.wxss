}

.history-page-container .add-item-box .upload-box .detial-box .image-upload-box .add-image {
  display: flex;
  padding: 32rpx 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.history-page-container .add-item-box .upload-box .detial-box .image-upload-box .add-image .add-icon {
  width: 100rpx;
  height: 100rpx;
}

.history-page-container .add-item-box .upload-box .detial-box .image-upload-box .add-image .upload-des {
