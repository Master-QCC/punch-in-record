  align-items: center;
  width: 100%;
  border-bottom: 1px solid #bfbfbf;
}

.history-page-container .add-item-box .upload-box .detial-item .title {
  flex: none;
}

.history-page-container .add-item-box .upload-box .detial-box {
  display: flex;
  flex-direction: column;
}

.history-page-container .add-item-box .upload-box .detial-box .detial-title .title, .history-page-container .add-item-box .upload-box .detial-box .detial-title .description, .history-page-container .add-item-box .upload-box .detial-box .detial-description .title, .history-page-container .add-item-box .upload-box .detial-box .detial-description .description {
  flex: none;
}

.history-page-container .add-item-box .upload-box .detial-box .detial-date {
  margin-bottom: 32rpx;
}

.history-page-container .add-item-box .upload-box .detial-box .detial-date .picker {
  width: 100%;
  padding: 19rpx 0;
}

.history-page-container .add-item-box .upload-box .detial-box .detial-date .picker .picker-value {
