}

.history-page-container .add-item-box .upload-box {
  display: none;
  width: 100%;
  height: 100%;
}

.history-page-container .add-item-box .upload-box .header {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  font-size: 48rpx;
}

.history-page-container .add-item-box .upload-box .header .title {
  background: linear-gradient(140deg, #ffbe46 20%, #E349C4 100%);
