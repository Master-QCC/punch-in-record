.history-page-container .history-wrapper .history-item-box .comment-input-box {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 32rpx;
  margin-top: -144rpx;
  background-color: white;
  border-radius: 0 0 30rpx 30rpx;
  opacity: 0;
  box-shadow: 0 10px 12px 2px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.history-page-container .history-wrapper .history-item-box .comment-input-box .input-box {
  font-size: small;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  background-color: #fff7ee;
  margin-right: 32rpx;
}

.history-page-container .history-wrapper .history-item-box .comment-input-box .add-btn {
  display: flex;
  padding: 16rpx;
  border-radius: 20rpx;
  background-color: #ffbe46;
}

.history-page-container .history-wrapper .history-item-box .comment-input-box .add-btn .icon {
  width: 50rpx;
  height: 50rpx;
}

.history-page-container .history-wrapper .history-item-box .comment-input-box .add-btn:active {
  background-color: #dfdfdf;
}

.history-page-container .history-wrapper .history-item-box .comment-input-box.open {
  margin-top: 0;
  opacity: 1;
}

.history-page-container .end-line {
  padding-bottom: 100rpx;
  opacity: 0.4;
  text-align: center;
}

