/**index.wxss**/
.punch-today {
  width: 100%;
}

.userinfo {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  animation-fill-mode: forwards;
  box-shadow: 0 10px 12px 2px rgba(0, 0, 0, 0.1);
}

.userinfo.hasUserInfo {
  animation: openIndex 4s;
  top: -100%;
}

.login-button {
  background: white;
  box-shadow: 0 10px 12px 2px rgba(0, 0, 0, 0.15);
  border-radius: 40rpx;
  color: #ffbe46;
}

.agreement-btn {
  padding: 16rpx;
  background: linear-gradient(140deg, #222222 30%, #f7aa06 100%);
  background-position: 50% 75%;
  background-size: 100% 200%;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  opacity: 0;
  animation: showItem 3s ease 3.5s;
  animation-fill-mode: forwards;
}

@keyframes openIndex {
  0% {
    top: 0;
  }
  100% {
    top: -100%;
  }
}
